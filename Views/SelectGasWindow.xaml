<Window x:Class="LaserCutHMI.Prototype.Views.SelectGasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gaz tüpü seçin" Height="200" Width="320"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Hangi gaz tüpünü değiştirmek istersiniz?" FontWeight="Bold" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,4,0,8">
            <RadioButton x:Name="rbAir"      Content="Hava (Air)"     IsChecked="True" Margin="0,4,0,4"/>
            <RadioButton x:Name="rbOxygen"   Content="Oksijen (Oxygen)" Margin="0,4,0,4"/>
            <RadioButton x:Name="rbNitrogen" Content="Azot (Nitrogen)"  Margin="0,4,0,4"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Tamam" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="İptal" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
